.carousel {
  width: 100%;
  height: 245px;
  box-sizing: border-box;
  position: relative;
}

.carousel swiper {
  height: 245px;
}

.carousel swiper .swiper-text {
  font-size: 16px;
  color: #333;
  padding: 8px 10px;
}

.carousel swiper .swiper-price {
  color: rgb(185, 159, 159);
  padding: 5px 10px;
  font-size: 12px;
}

.carousel swiper swiper-item {
  /* 此时的swiper-item是占据一个页面的 */
  text-align: left; /*让其中的内容居中显示 */
}

.carousel swiper swiper-item image {
  width: 100%;
  border-radius: 15px;
}

.carousel swiper .box {
  /* box设置宽高（更具设计稿自定义吧）*/
  width: 98%;
  height: 100%;
  display: inline-block;
  margin-top: 10px;
  box-sizing: border-box;
  box-shadow: 0 0 4px 4px #f2f2f2; /* 给box添加阴影效果更显著 */
  border-radius: 15px;
}
.carousel .right{
  border-radius: 10px;
  text-align: center;
  position: absolute;
  bottom: 10px;
  right: 40px;
  padding:3px 9px 3px 9px;
  z-index: 1;
  color: white;
  font-size: 12px;
  background-color: rgba(0, 0, 0, 0.5);
  border-color: rgb(200, 200, 200);
  border-style: none;
}
.icon-pic:before {
  font-size: 15px;
  content: "\e643";
}

.panel-view .item-view {
  font-size:15px;
}
.item-group .item-header .title{
 font-size:16px;
 font-weight: 800;
}
.item-group .item-view .left {
  flex: 0 0 auto;
}

.item-group .item-view .left2{
  flex:2 0 200px;
  min-height:50px;
  padding:10px 0 4px 0;
}
.item-group .item-view .right2{
   flex:0 0 40px;
   justify-content: center;
}
.item-group .item-view .row .block2{
  border-radius: 3px;
  display: inline-block;
  font-size: 12px;
  height: 20px;
  line-height: 20px;
  min-width: 45px;
  border: 1px solid #ccc;
  color:black;
  margin-right:5px;
  padding:0 2px 0 2px;
}
.icon-block2 {
  position: relative;
  display: inline-block;
  width: 20px;
  height: 23px;
  line-height: 25px;
}

.icon-phone:before {
  content: "\e60a";
}

.pic-view {
  position: relative;
}

.pic-view .pic-bottom{
  position: absolute;
  bottom: 0px;
  left: 0;
  min-height: 52px;
  width: 100%;
  z-index: 1;
  color: white;
  font-size: 15px;
  background-color: rgba(0, 0, 0, 0.6);
  border-color: rgb(200, 200, 200);
  border-style: none;
}

.pic-view .pic-bottom .item-text {
  color: white;
}
