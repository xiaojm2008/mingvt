.dialog-wrap {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index:50;
  background-color: rgba(201, 201, 201,0.6);
}

.bottom-pos{
  transform:translateY(100%);
}
.anim-show{
  transition:200ms linear 0ms;
  transition-property:transform;
}
.dialog {
  background-color:white;
  min-height: 200px;
  width: 95%;
  box-sizing: border-box;
  position: absolute;
  border: 1px solid rgba(0, 0, 0, 0.6);
  border-radius: 5px 5px 5px 5px;
  margin: 0 15px 0 auto;
  border:1px solid white;
  bottom: 0;
  width: 95%;
  z-index:51 !important;
  border: 1px solid #eee;
}
.bottom-panel {
  position: absolute;
  left: 50%;
  top: 75%;
  /*transform: translate(-50%,-50%)*/
}
.center-panel {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%)
}
.flex{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.flex .title{
  height: 45px;
  flex: 1 1 100%;
  font-size: 18px;
  font-weight: 600;
}
.flex .type{
  height: 100px;
  flex:1 1 100%;
  justify-content: space-around;
}
.flex .type .item{
  text-align:center;
  height: 100%;
}
.flex .type .share{  
  font-size:16px;
  background-color: white;
  line-height: initial;
}
.flex .type .share .iconfont{
  font-size:30px;
  font-weight: 700;
  height: 58px;
  line-height:58px;
}
.flex .type .share::after{
  width: 0 !important;
  height: 0 !important;  
}
.flex .type .txt {
  width: 100%;
  height:28px;
  display: block;
}
.btn{
  color: black;
  display: inline-block;
  background-color: #fff;
  border: 1px solid #555;
  margin: 0;
  cursor: pointer;
  -webkit-appearance: none;
  text-align: center;
  font-size: 14px;
  line-height: 30px;
  height:30px;
} 
.flex .btnx{
  margin:8px;
  padding:0 20px;
  height: 30px;
  flex:1 1 80%;
  border-radius: 8px;
  border: 1px solid green;
}
.iconfont {
  font-family: "iconfont" !important;
  font-style: normal;
  display: inline-block;
  -webkit-font-smoothing: antialiased;
