.flex{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.flex .title{
  height: 45px;
  flex: 1 1 100%;
  font-size: 18px;
  font-weight: 600;
}
.flex .type{
  height: 100px;
  flex:1 1 100%;
  justify-content: space-around;
}
.flex .type .item{
  text-align:center;
  height: 100%;
}
.flex .type .share{  
  font-size:16px;
  background-color: white;
  line-height: initial;
