/* cate-panel */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.panel-wrap {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index:50;
  background-color: rgba(201, 201, 201,0.6);
}
.cate-panel {
  width: 100%;
  height: 0px;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  position:fixed;
  left:0;
  z-index:99;
  background-color: rgb(252, 247, 247);
}
.cate-panel .navigate {
  flex: 2 1 120px;
  height: 100%;
  background-color: white;
}

.cate-panel .content {
  flex: 2 1 auto;
  height: 100%;
}

.cate-panel .navigate .item {
  display: block;
  height: 40px;
  font-size: 14px;
  color: black;
  text-align: left;
  line-height: 40px;
}
.cate-panel .navigate .item .txt{
  padding-left:15px;
}
