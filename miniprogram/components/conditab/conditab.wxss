.ext-horiz-view {
  display: flex;
  flex-wrap: wrap;
  font-size: 14px;
  margin-left: 10px;
}

.ext-horiz-view .view-item {
  padding: 0px !important;
  height:40px;
  line-height: 40px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  flex-wrap: wrap;
}
.ext-horiz-view .fix-item {
  justify-content:space-between !important;
}
.ext-horiz-view .view-item .flex-item {
  flex: 0 1 32%;
  border-bottom: 0;
  border-right: 0;
}
.ext-horiz-view .view-item .flex-row{
  flex: 2 1 100%;
  height: 100%;
}
.ext-horiz-view .view-item .flex-row-sel{
  color:red;
}
.ext-horiz-view .view-item .flex-active {
  background-color: rgb(255, 251, 251);
}

.ext-horiz-view .view-item .flex-item .cell-item {
  height: 35px;
  width: 88px;
}

.ext-horiz-view .view-item .flex-item .cell-item .svgimg {
  display: inline-block;
  width: 40px;
  height: 40px;
}

.ext-horiz-view .view-item .flex-item .triangle-tr {
  top: 0;
  right: 0;
  position: absolute;
  display: block;
  width: 0;
  height: 0;
  border-top: 20px solid rgba(112, 199, 112, 0.6);
  border-left: 20px solid transparent;
  font-size: 13px;
  color: white;
}

.ext-horiz-view .view-item .flex-item .triangle-tr .iconfont {
  position: relative;
  top: -35px;
  right: 15px;
  color: red;
}
