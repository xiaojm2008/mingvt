@import "../../../style/card.wxss";
@import "../../../style/horiz.wxss";
.fu-card{
  margin: 10px 10px 0 10px;
}
.fu-card:last-of-type{
  margin-bottom:10px;
}
.band-flag {
  position: absolute; /*绝对定位*/
  height: 28px;
  line-height: 28px;
  text-align: center;
  width: 128px;
  background-color: #ff5722;
  color: #fff;
  font-size: 20px;
}

/*
