.band-left {
  transform: rotate(-45deg);
  left: -28px;
  top: 19px;
}

.band-right {
  transform: rotate(45deg);
  right: -18px;
  top: 9px;
}
.marquee_container {
  position: absolute; /*绝对定位*/
  background-color: rgba(255, 86, 34, 0.8);
  height: 38px;
  line-height: 38px;
  bottom: 0px;
}
.marquee_text {
  color: white;
  animation-duration: 20s; /*过渡时间*/
}