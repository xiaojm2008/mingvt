.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  display: inline-block;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-rightarrow:before {
  content: "\e94e";
}
.icon-clock:before {
  margin-right:5px;
  content: "\e632";
}
.order-center {
  box-sizing: border-box;
  background: white;
  border-radius: 8px;
  margin: 10px;
  padding: 8px;
  position: relative;
}

.order-shopinfo {
  min-height: 30px;
  display: flex;
  font-size: 14px;
  align-items: center;
  margin-bottom:8px;
}
.order-shopinfo .shop-info{
  /*flex:0 0 130px;*/
  flex: 1 1 100%;
}
.order-shopinfo .order-st{
  text-align:right;
  flex: 1 1 60px;
}
.order-shopinfo .icon-rightarrow{
  padding-left:2px; 
  color: #ccc;
  position: relative;
  /*top:2px;*/
}

.order-content {
  position: relative;
  display: flex;
  justify-content: flex-start;
  padding-bottom: 15px;
}

.order-content .order-more {
  display: flex;
  justify-content: flex-start;
  border-radius: 3px;
  width: 90px; /*可自动伸缩*/
}

.order-content .order-more image {
  flex:0 0 90px;
  border-radius: 3px;
  height: 90px;
  background-color:#eee;
}
.order-content .order-desc {
  padding-left: 8px;
  flex: 1 1 100%;/*可大不可小*/
  margin-top: -5px;/*与图片对齐在水平线上*/
}
.order-content .stflag{
  font-size:14px;
  border: 1px solid green;
  color:green;
  border-radius: 5px;
  line-height: 20px !important;
  height: 20px;
  display: inline-block !important;
}
.order-content .sub{
  font-size: 16px;
  font-weight:600;
}
.order-content .text{
  font-size:14px;
  color:#666;
}
.order-content .order-desc .one {
  line-height: 24px;
}
.order-content .one {
  display: block; 
}
/*
.order-content .order-price text{
  display: block;
}*/
.order-content .order-price {
  text-align: right;
}

.order-center .left {
  flex: 1 1 100%;
}

.order-center .right {
  flex: 1 1 20px;
  text-align: right;
  /*
  用这个价格样式中金额和数量中间间隔太大了。
  display: flex;
  justify-content: flex-end;
  align-items: center;*/
}

.order-additional {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}

.order-additional .sub {
  font-size: 15px;
  flex:0 0 90px;
  text-align: right;
}
.order-additional .text {
  font-size: 14px;
  padding-left: 8px;
  flex:1 1 100px;
  font-weight: 600;
  color:green;
}

.order-center .order-sum{
  height: 30px;
  line-height: 30px;
  font-size: 13px;
  text-align: right;
}
.order-center .order-sum .num{
  font-size:18px;
  color:green;
  font-weight: 600;
}
.order-center .time-show{
  font-size:13px;
  color:#666;
  height: 30px;
  line-height: 30px;
  text-align: right;
}
.order-center .order-bottom{
  height: 30px;
  line-height: 30px;
  text-align: right;
}
.order-center .order-bottom .order-btn{
  margin-right:10px;
  width: 130rpx;
  font-size:13px;
  border-radius: 20px;
}
.order-center .order-bottom .order-btn:active{
  background: #eee;
}
.order-center .order-bottom .order-btn:last-child{
    margin-right:0;
}

/*orderDetail*/

.order-detail {
  box-sizing: border-box;
  background: white;
  padding: 8px;
  position: relative;
}

.order-detail .order-totalpay{
  height: 30px;
  font-size: 13px;
  display: flex;
  justify-content: space-between;
}

.order-detail .order-totalpay text{
  align-items: center;
  flex: 1 0 50%;
}

.btn {
  color: black;
  display: inline-block;
  background-color: #fff;
  border: 1px solid #555;
  margin: 0;
  cursor: pointer;
  -webkit-appearance: none;
  text-align: center;
  font-size: 14px;
  line-height: 25px;
  height:25px;
}

.errinfo {
  color:red;
}

