.shopcontent{
  padding: 0px 10px 0px 10px;
  display: flex;
  flex-direction: row;  
  justify-content: space-between;
  align-content: space-around;
  flex-wrap: wrap;
  position: relative;
}
.shopcontent .thumbnail{
  box-sizing: border-box;
  padding-top: 10px;
  flex:0 1 49%;
  width: 100%;
  height: 238px;
  border-radius: 5px;
}
/**
