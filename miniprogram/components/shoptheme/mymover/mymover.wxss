@import "../template/tools.wxss";

.movable-box {
  width: 100vh;
  height: 100vh;
  /*width:0;
  height: 0;
  pointer-events:none;*/
}

.movable-zoom {
  position: fixed;
  width: 0px;
  height: 0px;
  background-color: rgba(241, 239, 239, 0.3);
  border: 1px dashed #666;
  box-sizing: border-box;
}
.movable-zoom .title {
  height: 100%;
  font-size: 12px;
  color: black;
}
.movable-zoom .title .txt {
  display: block;
  padding:21px 0 0 5px;
}
.movable-zoom .title .txt1 {
  display: block;
}
.movable-zoom .title .posi{
  display: block;
  float:right;
}
.movable-zoom .close{
  display: block;
  width: 100%;
  text-align: center;
  margin: 0;
  pointer-events:none;
}
.movable-zoom .close .icon-clear{
  width: 21px;
  height: 21px;
  border:0px;
  display: inline-block;
  pointer-events:auto;
}
.movable-zoom .close .icon-clear::before{
  content:"";
  height: 31px;
  width: 0px;
  border-left: 1px dashed #666;
  margin-left:10px;
  display: block;
}
.movable-zoom .close .icon-clear::after {
  font-size: 20px;
  content: "\e93b";
}