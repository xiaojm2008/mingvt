/* prompt-row */
.prompt-row{
  flex-wrap:wrap;
}
.prompt-row .content-text{
   flex:0 0 auto;
   width:100%;
   padding-left:8px;
   line-height: 25px;
   color:#555;
}
.prompt-row .inner-text{
  flex: 1 0 100%;
  line-height: 25px;
}
.prompt-row .item-text{
  display: inline-block;
  color:#555;
  height: 25px;
  line-height: 25px;
  padding-left:8px;
}
.prompt-row .flex-item:last-child{
  border-right: 0px;
}
.prompt-row .flex-item {
  /*
  flex: 1 0 30%;*/
  flex: 1 0 25%;
  display: flex;
  min-height: 40px;
  line-height: 40px;
  position: relative;
  margin-right: 0;
  padding-bottom: 5px;
  background-color: white;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.prompt-row .flex-item image {
  height: 100px;
  margin: 5px 5px 5px 5px;
  width: 100%;
}
.prompt-row .ext-item {
  background-color: rgba(255, 251, 251, 0.5);
  position: relative;
  border-bottom: 0px;
  box-sizing: border-box;
}
.prompt-row .ext-item:last-child {
  margin-right: 0;
}