.badge-flag {
  position: absolute;
  top: 4px;
  right: 4px;
  width: 18px;
  height: 18px;
  line-height: 18px;
  font-size: 14px;
  background-color: #ff1616;
  border-radius: 50%;
  color: #fff;
  text-align: center;
}

.proj-bottom-opt {
  display: flex;
  justify-content: flex-end;
  width: 100%;
  height: 45px;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #eee;
  background-color: #fff;
}
.proj-bottom-opt .additional-item {
  display: flex;
  justify-content: space-between;
  width: 50%;
  box-sizing: border-box;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff;
}
.proj-bottom-opt .btn-item{
  width: 120px;
  text-align: center;
  line-height: 45px;
  font-size: 32rpx;
  color: #fff;
}
.proj-bottom-opt .btn-item:active{
   opacity:0.5;
}
.proj-bottom-opt .tobuy-item {
  background-color: #e64340;
}
.proj-bottom-opt .addcart-item {
  background-color: #fc8c31;
}
.proj-bottom-opt .app-item{
  background-color: #e64340;
}
.proj-bottom-opt .disabled-item{
    background-color: #ccc;
}
.proj-bottom-opt .additional-item .nav-item{
  /*border-right:1px solid #eee;*/
  width:33.3%;
  font-size:22px;  
  position: relative;
}
.additional-item .btn-item .ib2{
  margin-right: 3px;
}
.additional-item .nav-item:active{
  background-color: #eee;
}
