.center-panel {
  position: absolute;
  width: 100%;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
swiper-item image{
  width: 100%;
}
.panel-view{
  position: relative; 
}
.panel-view .item-group{
  box-sizing: border-box;
  padding: 0 0 0 0;
}
.panel-view .item-divider{
  box-sizing: border-box;
  padding: 0 10px 0 10px;
  height:10px;
  line-height: 10px;
  background: #eee;
}
.panel-view .item-header{
  box-sizing: border-box;
  padding: 0 10px 0 10px;
  font-size: 16px;
}
.panel-view .item-view{
  box-sizing: border-box;
  padding: 0 10px 0 10px;
  font-size: 13px; 
  width: 100%;
  line-height: 40px;
  min-height: 40px;
  display: flex;
  justify-content: flex-start;
  align-items: center;  
  /*align-content:flex-start;*/
  flex-wrap:wrap;
}
.panel-view .item-view .circle-image{
  border-radius: 50%;
  height: 38px;
  width: 38px;
  margin-right: 5px;
}
.panel-view .item-view .min-circle-image{
  border-radius: 50%;
  height: 28px;
  width: 28px;
  margin-right: 5px;
}
.panel-view .item-padd{
  padding-top: 10px;
  padding-bottom: 10px;
}
.panel-view .item-margin{
  margin-top: 10px;
  margin-bottom: 10px;
}
.panel-view .item-view .left{
  flex: 1 0 30px;
  text-align: left;
  display: flex;
  align-items: center
}
.panel-view .item-view .right{
  flex:3 0 auto;
  width:calc(100%-40px);
  /*
  justify-content: flex-start;
  align-items: center;
  text-align: left;*/
}
.panel-view .row{
  box-sizing: border-box;
  min-height: 20px;
  line-height: 20px;
  width: 100%;
}
.panel-view .item-text{
  display: inline-block;
  color:black;
  height: 25px;
  line-height: 25px;
  margin-right:10px; 
}
.panel-view .wrap-text{
  height: 25px;
  line-height: 25px;  
  width: 75%;
  overflow: hidden;
  white-space: nowrap; 
  text-overflow: ellipsis;  
  display: inline-block; 
}

.panel-view .subname{
  color:#999;
}
.panel-view .item-flag{
  margin-right:5px; 
  display: inline-block;
  font-size:12px;
  height: 16px;
  line-height: 16px;
  border: 1px solid white;
  border-radius: 5px;
  background-color: #fd0d0d;
  background-image:linear-gradient(45deg, #d41a1a, #d9e60c, #5c7c99);
}
.panel-view .stflag{
  font-size:14px;
  border: 1px solid green;
  color:green;
  border-radius: 5px;
  line-height: 20px !important;
  height: 20px;
  display: inline-block !important;
  margin-right: 5px;
}
.panel-view .gray{
  background-color: gray;
  border: 1px solid gray;
  color:white;
}
.panel-view .red{
  background-color: rgb(209, 98, 98);
  border: 1px solid rgb(209, 98, 98);
  color:white;
}
