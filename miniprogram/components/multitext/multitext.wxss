.multitext{
  min-height: 60px;
  min-width: 60px;
  line-height: 22px;
  letter-spacing:0.1px;
}
.multitext .content{
  width: 100%;
  height: 100%;
  /*padding: 5px 5px 5px 5px;*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
textarea{
  letter-spacing:0.1px;
  height: 60px;
  width:100% !important;
}