
/* new css by xjm */

.loading {
  width: 100%;
  height: 40px;
  position: relative;
  bottom: 0px;
  padding-top:15px; 
  justify-content: center;
  text-align: center;
}
.loading-center {
  text-align: center;
  position: absolute;
  width: 100%;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.loading-center image{
  width: 100px;
  height: 100px;
}
@keyframes loading_do {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
  100%{
   opacity: 1;
  }
}

.loading .dot {
  background-color: rgb(211, 164, 164);
  display: inline-block; /**圆点大小在这里设置，高宽一致，圆角值为高宽的一半**/
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  margin: 0 8rpx;
  opacity: 0.5;
  animation: loading_do 1.6s infinite linear;
}

.loading .dot1 {
  animation-delay: 0s;
}
.loading .dot2 {
  animation-delay: 0.8s;
}
.loading .dot3 {
  animation-delay: 1.6s;
}

.loading-wrap{
  text-align: center;
  padding:10px; 
}
.end-line{
  font-size:13px;
  color: #ccc;
  text-align: center;
}
.end-line:before{
  width: 90%;
  height: 1px;
  border: 1px solid #ccc;
}
.end-line:after{
  width: 90%;
  height: 1px;
  border: 1px solid #ccc;
}
