@import "../../components/shoptheme/nodetree/nodetree.wxss";
.box {
  width: 100%;
  height: 100%;
}
.first-show{
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.774);
}
.fu-page .fu-head{
  position: fixed;
  width: 100%;  
  top:0;
  right: 0;
  left: 0;
  z-index: 999;
  background: #fff;
}
.fu-page .fu-head .nav{
  text-align: center;
  height: 45px;
  line-height: 45px;
}
.fu-page .fu-content {
  position:relative;
  left:0;
  right:0;
}
.fu-page .fu-content .loc-v{
  border: 0;
}
.fu-page .fu-content .loc-v .x-grid{
  padding: 10px 10px 10px 10px;
}
.center-panel {
  position: absolute;
  width: 100%;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.close {
  top: 35px;
  left: 20px;
  position: fixed;
  width: 30px;
  height: 30px;
  line-height: 30px;
  text-align: center;
}
.close .iconfont{
  font-size: 30px;
  color:white;
}
.box .item {
  width: 100%;
  height: 100%;
}

.box .item .img {
  width: 100%;
  height: 100%;
}

.item-active .fadeIn {
  animation: fadeIn 2s linear;
}

.textDiv {
  font-size: 25px;
  width: 100%;
  height: 40px;
  line-height: 30px;
  box-sizing: border-box;
  margin: 0 auto;
  color: #fff;
  text-align: center;
  position: absolute;
  padding: 0 20px;
  top: 60%;
}

.text {
  font-family: "微软雅黑";
  box-sizing: border-box;
  width: 100%;
  background: none;
}

.regDiv {
  width: 160px;
  height: 40px;
  line-height: 40px;
  box-sizing: border-box;
  margin: 0 auto;
}

.regBtn {
  text-align: center;
  font-family: "微软雅黑";
  font-size: 16px;
  color: #fff;
  box-sizing: border-box;
  position: absolute;
  top: 81.4%;
  width: 160px;
  background: none;
}

.in-btn.raised {
  transition: all 0.1s;
}

.in-btn {
  display: block;
  position: relative;
  font-weight: 400;
  line-height: 40px;
  font-size: inherit;
  overflow: hidden;
  z-index: 0;
  cursor: pointer;
  color: #fff;
  border-radius: 20px;
  border: solid #fff 1px;
  width: 100%;
  text-align: center;
}

.anim {
  background-color: rgba(75, 78, 72, 0.388);
  animation: anim-out 0.75s;
  animation-iteration-count: infinite;
  animation-duration: 1.3s;
  transform: translateY(-50%) translateX(-50%);
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: -1;
}

.anim:before {
  position: relative;
  content: '';
  display: block;
  margin-top: 100%;
}

.anim:after {
  animation-iteration-count: infinite;
  animation-duration: 1.3s;
  animation: anim-out-pseudo 0.75s;
}

.anim:after {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 50%;
}

@keyframes anim-in {
  0% {
    width: 0%;
  }

  100% {
    width: 100%;
  }
}

@keyframes anim-in-pseudo {
  0% {
    background: rgba(255, 255, 255, 0.25);
  }

  100% {
    background: transparent;
  }
}

@keyframes anim-out {
  0% {
    width: 0%;
  }

  100% {
    width: 100%;
  }
}

@keyframes anim-out-pseudo {
  0% {
    background: rgba(255, 255, 255, 0.25);
  }

  100% {
    background: transparent;
  }
}

@keyframes fadein {
  0% {
    opacity: 0;
  }

  80% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}
