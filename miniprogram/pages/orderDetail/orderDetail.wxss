@import '../../style/list.wxss';
page {
  background-color: #eee;
  font-size:13px;
}
.list {
  margin-top:0;
  border-top:0;
  border-bottom:0; 
}
.list .item{
  padding-left:8px; 
  background-color:white;
}
.list .content {
  border-bottom:0px;
  padding-top:0px;
}
.list .content .thumpnail{
  flex:0 0 100px
}
.list .content image{
  padding-right:0;
  border-radius:3px; 
}

/*head*/
.ext-horiz-view .view-item .row{
  border-bottom:1px solid #888;
}
.view-ext {
  height: 80px !important;
}

.view-ext .row .left {
  flex: 0 1 180px;
}

.view-ext .cover-thumb {
  height: 40px;
  border-radius: 50%;
  flex:0 0 40px;
}
.view-ext .cover-text{
  width: 40px;
  height: 40px;
  line-height: 40px;
  border-radius: 50%;
  border:1px solid #ccc;
  font-weight: 800;
  color:blue;
  font-size: 30px;
  text-align: center;
}
.nickname {
  vertical-align: middle;
  padding-left: 10px;
  flex: 1 1 auto;
  text-align: left;
}

.nickname text {
  display: block;
  line-height: 20px;
}

.nickname .phone {
  font-size: 12px;
}
.ex-h{
  margin-top:0;
}
.ex-h .view-item{
  min-height: 30px;
  padding:0px;
  margin:0 8px 0 8px;
}
.ex-h .view-item .left{
  justify-content: flex-end;
  flex:0 0 100px;
}
.ex-h .view-item:last-child{
  padding-bottom:15px; 
}
.ex-h .view-item:first-child{
  border-top: 1px solid #eee; 
}
.bottom-box {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 45px;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #eee;
  background-color: #fff;
}
.bottom-box  .left-price {
  display: flex;
  width: 60%;
  justify-content: flex-start;
  align-items: center;
  padding: 0 15px 0 15px;
  font-size: 13px;
  box-sizing: border-box;
}
.bottom-box .to-do-btn {
  width: 120px;
  text-align: center;
  line-height: 40px;
  font-size: 13px;
  color: #fff;
}
.bottom-box .cancel-pay {
  background-color: #fc8c31;
}
.bottom-box .to-do-btn:active{
  opacity:0.5;
}
.bottom-box .confirm-pay{
  background-color: #e64340;
}
.bottom-box .total {
  color: #e64340;
  font-size:13px;
}
.bottom-box .txt {
  font-size:13px;
}
.order-btn{
  margin-right:10px;
  width: 75px;
  height: 25px;
  line-height: 25px;
  font-size:13px;
  border-radius: 8px;
}
.op{
  margin-right:0;
}
.recomm {
  background:#eee;
  padding:0px 0px 10px 10px;
}

.pay-amt{
  margin-left:5px;
  font-size:18px;
  color:rgb(250, 118, 118) !important;
}
.pay-title{
  color:#888;
  font-size:15px;
}