page {
  background-color: rgb(243, 243, 243);
  margin-left: auto;
}

.user-center {
  width: 100% !important;
  height: auto !important;
  font-size: 16px;
}

.view-ext {
  padding-left: 20px !important;
  height: 100px !important;
}

.view-ext .row .left {
  flex: 0 1 180px;
}

.view-ext .cover-thumb {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.nickname {
  vertical-align: middle;
  padding-left: 20px;
  flex: 1 1 auto;
  text-align: left;
}

.nickname text {
  display: block;
  line-height: 20px;
}

.nickname .phone {
  font-size: 12px;
}

.ext-horiz-view .view-item .left {
  justify-content: flex-start;
}

.view-item .item4 {
  border-bottom: 0;
  border-right: 0;
  text-align: center;
}

.view-item .item4 image {
  display: block;
  width: 20px;
  height: 20px;
  margin: 0 auto;
  padding-top: 10px;
}

.view-item .item4 .t {
  width: 100%;
  display: block;
  font-size: 14px;
  color: #333;
}

.fitem-active{
   filter: grayscale(100%);
}