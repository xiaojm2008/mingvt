.center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.card .additional .user-card {
  height: 100%;
  position: relative;
  float: left;
}

.card .additional .user-card::after {
  content: "";
  display: block;
  position: absolute;
  top: 10%;
  right: -2px;
  height: 80%;
  border-left: 2px solid rgba(0, 0, 0, 0.025);
}

.card .additional .user-card .level, .card .additional .user-card .points,.card .additional .user-card .balance {
  top: 15%;
  color: #fff;
  text-transform: uppercase;
  font-size: 10px;
  font-weight: bold;
  padding: 0.125rem 0.75rem;
  border-radius: 50px;
  white-space: nowrap;
  display: absolute;
}
.card .additional .user-card .username {
  font-size: 1rem;
}
.card .additional .user-card .balance {
  border-radius: 0;
  top: 75%;
}
.card .additional .user-card .points {
  top: 88%;
}
.card .additional .user-card .points view,.card .additional .user-card .level view{
 font-size:0.8rem;
}
.card .additional .user-card svg {
  top: 50%;
}
.card .additional .user-card image{
  top: 50%;
  width:80px;
  height: 80px;
  border-radius: 50%;
}
.card .additional .more-info {
  float: left;
  position: absolute;
  height: 100%;
}

.card .additional .coords {
  margin: 15px 5px;
  color: #fff;
  font-size: 0.8rem;
}

.card.green .additional .coords {
  color: #325c46;
}
.card .additional .coords view{
  display: inline-block;
}
.card .additional .coords view + view {
  float: right;
}

.card .additional .stats {
  font-size: 0.8rem;
  display: flex;
  position: absolute;
  bottom: 1rem;
  left: 1rem;
  right: 1rem;
  top: auto;
  color: #fff;
}

.card.green .additional .stats {
  color: #325c46;
}

.card .additional .stats > view {
  flex: 1;
  text-align: center;
}

.card .additional .stats label{
  display: block;
}

.card .additional .stats view.title {
  font-size: 12pxrem;
  font-weight: bold;
  text-transform: uppercase;
}

.card .additional .stats view.value {
  font-size: 0.8rem;
  font-weight: bold;
  line-height: 0.8rem;
}

.card .additional .stats view.value.infinity {
  font-size: 1.2rem;
}

.card .general {
  width: 300px;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
  box-sizing: border-box;
  padding: 1rem;
  padding-top: 0;
}

.card .general .more {
  position: absolute;
  bottom: 1rem;
  right: 1rem;
  font-size: 0.9em;
}
.username{
  position:relative;
  text-align: center;
  font-size: 1.2rem;
  display: block;
  top:10px; 
  font-weight: bold;
}