@import '../listAction/listAction.wxss';

.view-item .left{
  padding-left: 10px !important;
  flex: 0 1 65px !important;
  width:65px;
}
.view-item .left .iconfont{
  font-size: 25px;
}
.view-item .left .t{
  flex: 1 1 auto;
  width: 25px !important;
}
.view-item .right .flex-box{
  justify-content: flex-end !important;
  border-bottom:0;
}
.view-item .subname{
  color: #999;
}
.view-item .cover-thumb {
  flex: 0 0 25px;
  width: 25px !important;
  height: 25px !important;
  border-radius: 50%;
  padding-top: 0px;
}
.nickname {
  vertical-align: middle;
  padding-left: 5px;
  flex: 1 1 auto;
  text-align: left;
}
.nickname text {
  display: block;
  line-height: 15px;
}
.nickname .phone {
  font-size: 12px;
}
.simple-btn{
  background-color:rgba(10, 126, 10,0.1);
  border: 1px solid rgb(10, 126, 10);
  border-radius: 50%;
  text-align: center;
  position: relative !important;
  height: 20px;
  line-height: 20px;
  width: 20px;
  display: inline-block;
  color: rgb(10, 126, 10) ;
  margin-right: 5px;
  font-size: 15px;
  font-weight: 400;
}
.temp-active{
   border: 1px solid rgba(221, 132, 132,0.9);
   color:rgba(221, 132, 132,0.7);
}