@import '../console/console.wxss';

.view-item .flex-item .icon2 {
  font-size: 30px;
  color: green;
}
.view-item .flex-item .triangle-tr {
  top:0;
  right: 0;
  position: absolute;
  display: block;
  width: 0;
  height: 0;
  border-top: 40px solid rgba(112, 199, 112,0.6);
  border-left: 40px solid transparent; 
  font-size:15px;
  color:white;
}
.view-item .flex-item .role-flag{
  border-top: 40px solid rgba(190, 140, 0, 0.6);
}
.view-item .flex-item .triangle-tr .iconfont{
  position: relative;
  top:-50px;
  right: 20px;
}
.view-item .flex-item .triangle-tr .icon-closes{
  color:red;
}
/*head*/
.view-ext {
  height: 80px !important;
}

.view-ext .row .left {
  flex: 0 1 180px;
}

.view-ext .cover-thumb {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.view-ext .cover-text{
  width: 40px;
  height: 40px;
  line-height: 40px;
  border-radius: 50%;
  border:1px solid #ccc;
  font-weight: 800;
  color:blue;
  font-size: 30px;
  text-align: center;
}
.nickname {
  vertical-align: middle;
  padding-left: 10px;
  flex: 1 1 auto;
  text-align: left;
}

.nickname text {
  display: block;
  line-height: 20px;
}

.nickname .phone {
  font-size: 12px;
}
