.cate-panel .navigate .select-item:first-child {
  border-top: 0;
}
.cate-panel .navigate .select-item:last-child {
  border-top: 0;
}
.cate-panel .navigate .select-item {
  /*
  color: red;
  border-left: 3px solid rgb(121, 6, 6);
  */
  font-size: 16px;
  background-color: white;
  border-right: 0;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.cate-panel .navigate .select-item .txt{
  width: 100%;
  color: red;
  border-left: 3px solid rgb(121, 6, 6);
  display: block;
}
.ext-horiz-view .view-item {
  padding: 0px !important;
  min-height:40px;
}
.ext-horiz-view .view-item .iconshow{
  color:rgb(223, 75, 75);
  padding-right: 10px;
}
.ext-horiz-view .center{
  justify-content: center;
}
.ext-horiz-view .fix-item {
  justify-content:space-between !important;
}
.ext-horiz-view .view-item .flex-item {
  flex: 0 1 32%;
  border-bottom: 0;
  border-right: 0;
}

.ext-horiz-view .view-item .flex-active {
  background-color: rgb(255, 251, 251);
}

.ext-horiz-view .view-item .flex-item .cell-item {
  height: 35px;
  width: 88px;
}

.ext-horiz-view .view-item .flex-item .cell-item .svgimg {
  display: inline-block;
  width: 40px;
  height: 40px;
}

.ext-horiz-view .view-item .flex-item .triangle-tr {
  top: 0;
  right: 0;
  position: absolute;
  display: block;
  width: 0;
  height: 0;
  border-top: 20px solid rgba(112, 199, 112, 0.6);
  border-left: 20px solid transparent;
  font-size: 13px;
  color: white;
}

.ext-horiz-view .view-item .flex-item .triangle-tr .iconfont {
  position: relative;
  top: -35px;
  right: 15px;
  color: red;
}
