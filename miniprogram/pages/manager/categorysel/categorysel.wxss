/* pages/category/category.wxss */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.bar {
  position: sticky;
  top: 0;
  z-index: 1;
  margin-top: 0;
  border-bottom: 1px solid #eee;
}

.cate-panel {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.cate-panel .navigate {
  flex: 0 1 95px;
  height: 100%;
  background-color: #eee;
}

.cate-panel .content {
  flex: 2 1 auto;
  height: 100%;
}

.cate-panel .navigate .item {
  display: block;
  height: 30px;
  font-size: 14px;
  color: black;
  text-align: center;
  line-height: 30px;
  padding: 10px 0 10px 0;
  border-right: 1px solid #eee;
  background-color: #eee;
}
