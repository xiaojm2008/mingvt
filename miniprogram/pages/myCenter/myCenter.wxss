.fu-content .top-info {
  position:relative;
  line-height: 120px;
  height: 120px;
  background-color: #fff;
}
.fu-content .top-info .cover-thumb {
  display: block;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  font-size:13px;
  color: white;
  text-align: center;
}
.view-begin{
  margin-top: 0px;
  padding:0 5px 0 5px;
}

.ext-horiz-view {
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.ext-horiz-view .view-item{
  /*flex-wrap:nowrap;*/
  padding: 0px;
  margin:0 8px 0 8px;
  border-bottom:1px solid #eee;
}
.ext-horiz-view .view-item:last-child{
  border-bottom:0;
}
.ext-horiz-view .view-item .right .btn-icon::after{
  width:0 !important;
  height: 0 !important;
}
.fu-bottom{
  margin-top:10px;
}
