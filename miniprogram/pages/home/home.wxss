.sub-icon-left {
  float: left;
  font-size: 22px;
  line-height: 30px;
  height: 30px;
  margin-right: 10px;
}

.subname {
  font-size: 20px;
  color: #a79c9c;
  line-height: 30px;
  height: 30px;
}

.sub-icon-right {
  width: 20px;
  height: 30px;
  line-height: 30px;
  float: right;
  color: #ccc;
  margin-right: 5px;
  font-size: 15px;
}

.toprank {
  width: 100%;
  background-color: rgb(255, 255, 255);
  box-sizing: border-box;
}

.toprank .row {
  padding: 10px 10px 10px 10px;
  display: flex;
}
.showline:hover{
  background-color:rgb(243, 242, 242);
  filter: grayscale(50%);  
}
.showline {
  position: relative;
  width: 100%;
}
.showline:after {
  border-bottom: 1px solid #ccc;
  transform: scale(0.5);
  width: 200%;
  display: block;
  content: "";
  position: absolute;
  left: -50%;
  bottom: 0;
  top: 119px;
  height: 1px;
}

.toprank .column1 {
  width: 130px;
  height: 100px;
}

.column1 .trump {
  width: 100%;
  height: 100%;
}

.toprank .column2 {
  height: 100px;
  width: 100%;
}

.toprank .text-col {
  padding-left: 5px;
  font-size: 15px;
  width: 100%;
  height: 100%;
}

.list-wrap{
  padding: 0 0 0 10px;
}
.list-wrap .content {
  border: 1px solid #eee;
}
