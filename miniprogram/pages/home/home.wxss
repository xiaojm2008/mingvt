@import "../../components/coupon/coupon.wxss";
page{
  min-height: 100vh;
  box-sizing: border-box;
  /*border:1px solid red;*/
}
.container{
  width: 100%;
  height: 100vh;
  overflow-y: scroll;
  box-sizing: border-box;
}
.home {
  background-color: white;
  margin-left: auto;
}

.carousel-head {
  display: flex;
  padding: 10px 0 0 10px;
}

.carousel-title {
  font-size: 20px;
  color: #a79c9c;
}

.carousel {
  width: 100%;
  height: 380px;
  box-sizing: border-box;
}

swiper {
  height: 360px;
}

.swiper-text {
  font-size: 16px;
  color: #333;
  padding: 8px 10px;
}

.swiper-price {
  color: rgb(185, 159, 159);
  padding: 5px 10px;
  font-size: 12px;
}

swiper-item {
  /* 此时的swiper-item是占据一个页面的 */
  text-align: left; /*让其中的内容居中显示 */
}

swiper-item image {
  width: 100%;
  border-radius: 15px;
}

.box {
  /* box设置宽高（更具设计稿自定义吧）*/
  width: 95%;
  height: 320px;
  display: inline-block;
  margin-top: 10px;
  box-sizing: border-box;
  box-shadow: 0 0 4px 4px #f2f2f2; /* 给box添加阴影效果更显著 */
  border-radius: 15px;
}


.subject {
  height: 30px;
  line-height: 30px;
  margin-top: 12px;
  width: 100%;
  margin-left: 10px;
  position: relative;
  padding-bottom: 8px;
}
