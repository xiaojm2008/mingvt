page {
  padding-top: 100rpx;
}
.iconfont{
  font-size: 25px;
}
.icon-search{
  color:#888;
}
.search {
  position: fixed;
  padding: 20rpx;
  background: #ffffff;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
}
.search .hd {
  font-size: 0;
}
.search .hd image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.search .bd {
  flex: 1;
}
.search .bd input {
  width: 100%;
  height: 60rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.search .ft {
  font-size: 0;
  padding: 30rpx;
  margin: -30rpx;
}
.search .ft image {
  width: 36rpx;
  height: 36rpx;
  margin-left: 20rpx;
}
