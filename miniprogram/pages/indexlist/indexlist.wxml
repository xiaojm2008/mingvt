<view class="search">
	<view class="hd"><text class="iconfont icon-search"></text></view>
	<view class="bd"><input bindinput="search" value="{{searchValue}}" placeholder="搜索"/></view>
	<view wx:if="{{searchValue != ''}}" bindtap="clear" class="ft"><image src="/assets/image/icon/delete.png"></image></view>
</view>
<indexlist bind:click="itemClick" empty-show="{{emptyShow}}" top-size="{{topSize}}" list-data="{{listData}}" color="#3F82FD"></indexlist>
