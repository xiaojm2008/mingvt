.top-head{
  position: fixed;
  top:0;
  left:0;
  right: 0;
  z-index: 1;
  margin-top: 0px;
  border-bottom: 1px solid #ededed;
}
.list {
  margin-top:44px; 
  position: relative;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}

.list .item {
  box-sizing: border-box;
  display: flex;
  min-height: 95px;
  align-items: center;
  padding-left: 15px;
}
.list .item-hover{
  background-color:rgb(243, 242, 242);
  filter: grayscale(50%);  
}
.list .content {
  flex-grow: 1;
  display: flex; 
  padding: 10px 10px 10px 0px;  
  border-bottom: 1px solid #ededed;
}
.list >.item:last-child .content{
  border-bottom: 0;
}
.list .label {
  flex: 0 0 auto;
  padding: 10px 0;
}
.list .content .oper-btn{
  flex: 0 0 auto;
  align-self:center;
  width:40px;
}
.list .content .thumpnail{
  flex: 0 0 auto;
}
.list .content image {
  height: 90px;
  width: 90px;
  padding-right: 10px;
}

.list .content .text {
  flex-grow: 1;
  font-size: 14px;
}

.list .content .title {
  overflow: hidden;
}

.list .content .spec {
  font-size: 12px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  line-height: 24px;
  max-height: 24px;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;  
}
.list .content .text2{
  flex:0 1 58px;
  flex-wrap: wrap;
  text-align: center;
  font-size: 12px;
  display: flex;
  justify-content:flex-end;
}
.list .content .num{
  flex:0 0 50px;
  flex-wrap: wrap;
  text-align: right;
  font-size: 12px;
}
.list .content .num text{
  display: block;
  width: 100%;
  height: 20px;
}
.list .content .price {
  display: flex;
  font-size: 16px;
}
.list .content .price text:nth-child(1) {
  color: #ff5f19;
  flex: 1 0 50%;
}

.right-succ{
  float:right;
  font-size:13px;
  color:green;
}
.st{
  border-radius: 3px;
  display: block;
  float:right;
  font-size:13px;
  min-height: 20px;
  min-width: 45px;
}
.st-red{
  border: 1px solid red;
  color:red;
}
.st-green{
  border: 1px solid green;
  color:green;
}
.subname{
  display: block;
  color:#ccc;
  font-size: 12px;
}
.subject{
  display: block;
  color:rgb(17, 17, 17);
  font-size: 14px;
}