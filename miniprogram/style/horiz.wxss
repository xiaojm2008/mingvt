  width: 100%;
  display: flex;
  justify-content: flex-start; /*space-around;*/
  flex-wrap: wrap;
}

.flex-box .flex-item {
  flex: 0 0 30%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
