/* 多项选择 */

.view-item .flex-item2 {
  flex: 0 0 30%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  min-height: 40px;
}

.view-item .flex-item2 .icon {
  flex: 0 0 20px;
  padding-right: 8px;
}

.view-item .flex-item2 .text {
  flex: 2 0 auto;
}

/*user by horizontal view-item flex-item ext-item img upload*/

.view-item .ext-item {
  background-color: rgba(255, 251, 251, 0.5);
  position: relative;
  border-bottom: 0px;
  box-sizing: border-box;
}

.view-item .ext-item:last-child {
  margin-right: 0;
}

.view-item .ext-item .icon-addimg, .panel-view .item-view .icon-addimg {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 38px;
  color: white;
  text-align: center;
}

.view-item .ext-item .icon-addimg text, .panel-view .item-view .icon-addimg text {
  color: rgb(224, 114, 114);
  font-size: 30px;
  display: block;
}

.view-item .ext-item .top-desc, .panel-view .item-view .top-desc {
  position: absolute;
  text-align: right;
  right: 5px;
  top: -10px;
  font-size: 13px;
  color: #999;
}

/*ext-item end*/

.panel-view .item-view .bottom-desc {
  position: absolute;
  text-align: right;
  right: 5px;
  bottom: 0px;
  font-size: 13px;
  color: red;
}

