/* ext-horiz-view */

.ext-horiz-view {
  display: flex;
  background: #fff;
  flex-wrap: wrap;
  font-size: 14px;
  margin-top: 10px;
}

.ext-horiz-view .view-item {
  /*
  padding-right: 0;
  padding-left:0px;*/
  padding: 0 8px 0 8px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  /*line-height: 45px;*/
  min-height: 45px;
}

.ext-horiz-view .view-grid {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  height: 145px;
  width: 100%;
  align-content: space-around;
  justify-content: space-around;
  /*background: #ccc;*/
}

.ext-horiz-view .view-grid .text,.ext-horiz-view .col-grid .text {
  position: absolute;
  bottom: 6px;
  left: 1px;
  height: 20px;
  z-index: 1;
  color: white;
  text-align: center;
  font-size: 14px;
  background-color: rgba(0, 0, 0, 0.4);
  border-color: rgb(34, 34, 34);
  border-style: none;
  border-radius: 8px;
  opacity: 1;
}

.ext-horiz-view .view-grid .flex-item {
  /*margin: 0 5px 5px 0;*/
  background: #aaa;
  position: relative;
  width:32%;
  flex-grow: 0; /* default 0 */
}

.ext-horiz-view .item-prompt {
  border-bottom: 0;
}

.ext-horiz-view .item-prompt::after {
  content: '';
  position: relative;
  width: 100%;
  height: 4px;
  background: linear-gradient(135deg, transparent, transparent 45%, red, transparent 55%, transparent 100%),
                linear-gradient(45deg, transparent, transparent 45%, red, transparent 55%, transparent 100%);
  background-size: 8px 8px;
  background-repeat: repeat-x, repeat-x;
}

/*panel */

.panel-view {
  border-bottom: 1px solid #eee;
  width: 100%;
}

.panel-view .item-view {
  /* text-align: right;*/
  min-height: 40px;
  line-height: 40px;
  display: inline-block;
  width: 100%;
  border: 1px solid white;
  position: relative;
  margin-top: 10px;
}

.ext-horiz-view .view-active {
  background-color: #eee;
}

.ext-horiz-view .view-item .row {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  line-height: 45px;
  min-height: 45px;
  width: 100%;
  margin-right: 10px;
  border-bottom: 1px solid #eee;
}
